{
  "name": "homeremote-server",
  "version": "2.2.2",
  "private": true,
  "repository": "https://github.com/mdvanes/homeremote-server",
  "author": "M.D. van Es",
  "license": "MIT",
  "engine": "node >= 15.0.0",
  "scripts": {
    "build": "nest build && cp -r client dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=DEVELOPMENT nest start",
    "start:dev-nginx": "docker run --rm --name homeremote-dev-nginx --add-host localnode:$(ifconfig eth0 | grep inet | grep -v inet6 | awk '{print $2}') -p 3002:80 -v $PWD/nginx.conf:/etc/nginx/nginx.conf:ro -d nginx",
    "start:dev": "NODE_ENV=DEVELOPMENT nest build --watch --webpack --webpackPath webpack-hmr.config.js",
    "start:dev-temp": "NODE_ENV=DEVELOPMENT nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit --incremental false",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "validate": "npm run lint && npm run typecheck && npm run test:cov",
    "prebuild": "rimraf dist && npm run validate",
    "deploy": "cp -r dist ../homeremote-v2-dist"
  },
  "dependencies": {
    "@ctrl/transmission": "^2.2.2",
    "@hapi/joi": "^17.1.1",
    "@influxdata/influxdb-client": "^1.21.0",
    "@mdworld/homeremote-dockerlist-server": "^1.7.0",
    "@mdworld/homeremote-stream-player-server": "^1.6.2",
    "@nestjs/common": "^7.6.18",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.18",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/platform-ws": "^7.6.18",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/websockets": "^7.6.18",
    "bcrypt": "^4.0.1",
    "cookie-parser": "^1.4.5",
    "got": "^11.7.0",
    "id3-writer": "^1.3.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pretty-bytes": "^5.6.0",
    "pretty-ms": "^7.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.6.3",
    "youtube-dl": "^3.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.18",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@types/ws": "^7.4.5",
    "@types/youtube-dl": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
